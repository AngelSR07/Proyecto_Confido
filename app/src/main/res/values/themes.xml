<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Confido" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <!-- Estilo del programa sin la barra del menú en pantalla -->
    <style name="Theme.Confido.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!-- Permite que la barra del menú se superponga de manera fija en todas las actividades -->
    <style name="Theme.Confido.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>



    <!-- Estilo del programa cuando la barra del menu se muestra en pantalla -->
    <style name="Theme.Confido.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>




    <!-- Estilo de la imagen redonde da la lista de conceptos informativos -->
    <style name="roundImgView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>